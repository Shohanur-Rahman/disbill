<body id="day-mode">
    <header class="edgpay-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="float-left">
                        <a class="nav-link active" href="~/"><img src="@Url.Content("~/images/logo.png?v=" + SiteSettings.UploadVersion)" alt="DG Pay Logo" class="login-top-logo" /></a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section class="edgpay-page-body">
        <div class="container">
            @RenderBody()
        </div>
    </section>

    <footer class="edgpay-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="copy-right">কপিরাইট © ২০১৯ - ২০২০ ডিজিপে</p>
                </div>
            </div>
