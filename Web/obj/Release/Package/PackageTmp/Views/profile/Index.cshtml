@model Services.Domain.UserOperationData
@{
    ViewBag.Title = "প্রোফাইল";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row m-t-15">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">প্রোফাইল</div>
            <div class="card-body">
                @using (Html.BeginForm("UpdateUserProfile", "profile", FormMethod.Post, new { enctype = "multipart/form-data", @id = "frmUpdateUserProfile", @class = "form-horizontal", role = "form" }))
                {
                    @Html.ValidationSummary(true)
                    <div class="form-group row">

                        @Html.HiddenFor(m => m.User.Avatar, new { @id = "hdnAvatarURL" })
                        @Html.HiddenFor(m => m.User.CompanyLogo, new { @id = "hdnCompanyLogoURL" })

                        @if (string.IsNullOrEmpty(Model.User.Avatar) == false)
                        {
                            <div class="col-md-6 col-sm-12">
                                <div class="float-left">
                                    <div class="upload-btn-wrapper">
                                        <button class="btn">Changhe profile picture</button>
                                        @Html.TextBoxFor(m => m.UserAvatarThumb, new { @class = "", @id = "fileProfilePicture", @type = "file" })
                                    </div>
                                </div>
                                <div class="float-left">
                                    <img src="@Url.Content("~/"+Model.User.Avatar)" id="imgProfilePicture" alt="@Model.User.Name" class="img-thumbnail profile-avatar">
                                </div>
                            </div>

                        }
                        else
                        {
                            <div class="col-md-6 col-sm-12">
                                <div class="float-left">
                                    <div class="upload-btn-wrapper">
                                        <button class="btn">Upload profile picture</button>
                                        @Html.TextBoxFor(m => m.UserAvatarThumb, new { @class = "", @id = "fileProfilePicture", @type = "file" })

                                    </div>
                                </div>
                                <div class="float-left">
                                    <img src="https://via.placeholder.com/200x200" id="imgProfilePicture" alt="@Model.User.Name" class="img-thumbnail profile-avatar">
                                </div>
                            </div>
                        }

                        @if (string.IsNullOrEmpty(Model.User.CompanyLogo) == false)
                        {
                            <div class="col-md-6 col-sm-12">
                                <div class="float-left">
                                    <div class="upload-btn-wrapper">
                                        <button class="btn">Change company logo</button>
                                        @Html.TextBoxFor(m => m.CompanyAvatar, new { @class = "", @id = "fileCompanyLogo", @type = "file" })
                                    </div>
                                </div>
                                <div class="float-left">
                                    <img src="@Url.Content("~/"+Model.User.CompanyLogo)" id="imgCompanyLogo" alt="@Model.User.CompanyName" class="img-thumbnail profile-avatar">
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-6 col-sm-12">
                                <div class="float-left">
                                    <div class="upload-btn-wrapper">
                                        <button class="btn">Upload company logo</button>
                                        @Html.TextBoxFor(m => m.CompanyAvatar, new { @class = "", @id = "fileCompanyLogo", @type = "file" })
                                    </div>
                                </div>
                                <div class="float-left">
                                    <img src="https://via.placeholder.com/200x200" id="imgCompanyLogo" alt="..." class="img-thumbnail profile-avatar">
                                </div>
                            </div>
                        }
                    </div>

                    <div class="form-group">
                        <div class="dummy_customErrorMessage"></div>
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.Name, new { @id = "txtManagerName", @class = "form-control", maxlength = "200", placeholder = "ম্যানেজার নাম", @title = "ম্যানেজার নাম", @required = "true" })
                        <div class="invalid-feedback">ম্যানেজার নামের ঘরটি পূরণ করুন</div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.CompanyName, new { @id = "txtCompanyName", @class = "form-control", maxlength = "200", placeholder = "কোম্পানীর নাম", @title = "কোম্পানীর নাম", @required = "true" })
                        <div class="invalid-feedback">কোম্পানীর নামের ঘরটি পূরণ করুন</div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.FathersName, new { @id = "txtFathersName", @class = "form-control", maxlength = "200", placeholder = "পিতার নাম", @title = "পিতার নাম", @required = "true" })
                        <div class="invalid-feedback">পিতার নামের ঘরটি পূরণ করুন</div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.MobileNumber, new { @id = "txtMobileNumber", @class = "form-control", maxlength = "200", placeholder = "মোবাইল নাম্বার", @title = "মোবাইল নাম্বার", @required = "true", @readonly= "readonly" })
                        <div class="invalid-feedback">মোবাইল নাম্বারের ঘরটি পূরণ করুন</div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.Email, new { @id = "txtEmail", @type = "email", @class = "form-control", maxlength = "200", placeholder = "ইমেল", @title = "ইমেল", @required = "true" })
                        <div class="invalid-feedback">ইমেইলের ঘরটি পূরণ করুন</div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.House, new { @id = "txtHouse", @class = "form-control", maxlength = "200", placeholder = "বাড়ি নং/মহল্লা", @title = "বাড়ি নং/মহল্লা", @required = "true" })
                        <div class="invalid-feedback">বাড়ি নং/মহল্লা ঘরটি পূরণ করুন</div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.Road, new { @id = "txtRoad", @class = "form-control", maxlength = "200", placeholder = "রোড নং/গ্রাম", @title = "রোড নং/গ্রাম", @required = "true" })
                        <div class="invalid-feedback">রোড নং/গ্রাম ঘরটি পূরণ করুন</div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.PostOffice, new { @id = "txtPostOffice", @class = "form-control", maxlength = "200", placeholder = "পোস্ট অফিস", @title = "পোস্ট অফিস", @required = "true" })
                        <div class="invalid-feedback">পোস্ট অফিস ঘরটি পূরণ করুন</div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.Thana, new { @id = "txtThana", @class = "form-control", maxlength = "200", placeholder = "থানা/উপজেলা", @title = "থানা/উপজেলা", @required = "true" })
                        <div class="invalid-feedback">থানা/উপজেলা ঘরটি পূরণ করুন</div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.Zila, new { @id = "txtZila", @class = "form-control", maxlength = "200", placeholder = "জেলা", @title = "জেলা", @required = "true" })
                        <div class="invalid-feedback">জেলা ঘরটি পূরণ করুন</div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.NIDNo, new { @id = "txtNIDNo", @class = "form-control", maxlength = "200", placeholder = "জাতীয় পরিচয় পত্র নং", @title = "জাতীয় পরিচয় পত্র নং", @required = "true" })
                        <div class="invalid-feedback">জাতীয় পরিচয় পত্র নং ঘরটি পূরণ করুন</div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.ReferenceName, new { @id = "txtReferenceName", @class = "form-control", maxlength = "200", placeholder = "রেফারেন্সের নাম", @title = "রেফারেন্সের নাম" })
                        @*<div class="invalid-feedback">রেফারেন্সের নাম ঘরটি পূরণ করুন</div>*@
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.User.ReferenceMobile, new { @id = "txtReferenceMobile", @class = "form-control", maxlength = "200", placeholder = "রেফারেন্সের মোবাইল", @title = "রেফারেন্সের মোবাইল" })
                        @*<div class="invalid-feedback">রেফারেন্সের মোবাইল ঘরটি পূরণ করুন</div>*@
                    </div>
                    if (ViewBag.AppUserRoleId == 1 || ViewBag.AppUserRoleId == 2)
                    {
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.User.CompanySignature, new { @id = "txtReferenceMobile", @class = "form-control", maxlength = "200", placeholder = "কোম্পানীর নাম ও মোবাইল", @title = "কোম্পানীর নাম ও মোবাইল", @required = "true" })
                            <div class="invalid-feedback">কোম্পানীর নাম ও মোবাইল নাম্বার লিখুন</div>
                        </div>
                    }

                    <button type="submit" class="btn btn-primary" onclick="return DoManagerProfileValidation();">আপডেট</button>
                }
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {

        $("#fileProfilePicture").change(function () {
            readURL(this, "#imgProfilePicture");
        });

        $("#fileCompanyLogo").change(function () {
            readURL(this, "#imgCompanyLogo");
        });
    });


    function readURL(input, id) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $(id).attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    function DoManagerProfileValidation() {
        $(".dummy_customErrorMessage").hide();
        var form = $("#frmUpdateUserProfile");
        var mobileNumber = $.trim($("#txtMobileNumber").val());
        var emailAddress = $.trim($("#txtEmail").val());

        if (form[0].checkValidity() === false) {
            event.preventDefault()
            event.stopPropagation()
        }

        form.addClass('was-validated');

        if (ValidateBDMobile(mobileNumber) == false) {
            $(".dummy_customErrorMessage").text("Invalid mobile number");
            $(".dummy_customErrorMessage").show();
            return false;
        }
        if (ValidateEmail(emailAddress) == false) {
            $(".dummy_customErrorMessage").text("Please Enter a valid email.");
            $(".dummy_customErrorMessage").show();
            return false;
        }

        return form[0].checkValidity();
    }



</script>